{
    // CTRL+SHIFT+B u VScode aplikaciji za runnanje pojedinih taskova
    //Olak≈°ava pokretanje igre
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start ZEO Server",
            "type": "process",
            "command": "runzeo",
            "args": ["-C", "zeo.conf"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "./Circus"
            }
        },
        {
            "label": "Start WebSocket Server",
            "type": "process",
            "command": "python",
            "args": ["server.py", "--port", "6789", "--dbhost", "localhost", "--dbport", "8100" ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "./Circus"
            }
        },
        {
            "label": "Start Client",
            "type": "process",
            "command": "python",
            "args": ["main.py", "--username", "Iris", "--password", "PASS", "--server", "localhost", "--port", "6789"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "./Circus"
            }
        },
        {
            "label": "Start Second Client",
            "type": "process",
            "command": "python",
            "args": ["main.py", "--username", "Ivan", "--password", "PASS2", "--server", "localhost", "--port", "6789"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "./Circus"
            }
        }
    ]
}
    